<Context>

    <!-- Default set of monitored resources -->
    <WatchedResource>WEB-INF/web.xml</WatchedResource>

    <!-- Uncomment this to disable session persistence across Tomcat restarts -->
    <!--
    <Manager pathname="" />
    -->

    <!-- Uncomment this to enable Comet connection tacking (provides events
         on session expiration as well as webapp lifecycle) -->
    <!--
    <Valve className="org.apache.catalina.valves.CometConnectionManagerValve" />
    -->
<%- if @context_resources and ! @context_resources.empty? -%>
  <%- [@context_resources].flatten.compact.each do |resource| %>
  <%- resource.sort.map do |attrib, att_value| -%>
    <%- if attrib == resource.keys.sort.first -%>
    <ResourceLink <%= attrib %>="<%= att_value %>"<% if attrib == resource.keys.sort.last %> /><% end %>
    <%- else -%>
                  <%= attrib %>="<%= att_value %>"<% if attrib == resource.keys.sort.last %> /><% end %>
    <%- end -%>
  <%- end -%>
  <%- end -%>
<%- end -%>

</Context>
