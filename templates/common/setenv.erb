# ******************
# Managed by Puppet
# ******************

<% if @instance %>SERVICE_NAME="<%= @service_name_real %>"

<% end -%>
<% if @java_home and @java_home != '' %>JAVA_HOME="<%= @java_home %>"

<% end -%>
CATALINA_BASE="<%= @catalina_base_real %>"
CATALINA_HOME="<%= @catalina_home_real %>"
JASPER_HOME="<%= @jasper_home_real %>"
CATALINA_TMPDIR="<%= @catalina_tmpdir_real %>"
<% if @catalina_pid_real and @catalina_pid_real != '' %>CATALINA_PID="<%= @catalina_pid_real %>"
<% end -%>

<% if @java_opts_real and @java_opts_real != '' %>JAVA_OPTS="<%= @java_opts_real %>"
<% end -%>
<% if @catalina_opts_real and @catalina_opts_real != '' %>CATALINA_OPTS="<%= @catalina_opts_real %>"
<% end -%>

<% if scope['::osfamily'] == 'Debian' -%>
TOMCAT<%= scope['::tomcat::maj_version'] %>_USER="<%= scope['::tomcat::tomcat_user_real'] %>"
TOMCAT<%= scope['::tomcat::maj_version'] %>_GROUP="<%= scope['::tomcat::tomcat_group_real'] %>"

<% else -%>
TOMCAT_USER="<%= scope['::tomcat::tomcat_user_real'] %>"
TOMCAT_GROUP="<%= scope['::tomcat::tomcat_group_real'] %>"

<% end -%>
<% if @lang and @lang != '' -%>LANG="<%= @lang %>"<% end -%>
<% if scope['::osfamily'] == 'Debian' -%>
TOMCAT<%= scope['::tomcat::maj_version'] %>_SECURITY="<%= @security_manager_real %>"
<% else -%>
SECURITY_MANAGER="<%= @security_manager_real %>"
<% end -%>

<% if scope['::osfamily'] == 'RedHat' -%>
SHUTDOWN_WAIT="<%= @shutdown_wait %>"
SHUTDOWN_VERBOSE="<%= @shutdown_verbose %>"

<% end -%>
<% if @jpda_transport and @jpda_transport != '' %>JPDA_TRANSPORT="<%= @jpda_transport %>"
<% end -%>
<% if @jpda_address and @jpda_address != '' %>JPDA_ADDRESS="<%= @jpda_address %>"
<% end -%>
<% if @jpda_suspend and @jpda_suspend != '' %>JPDA_SUSPEND="<%= @jpda_suspend %>"
<% end -%>
<% if @jpda_opts_real and @jpda_opts_real != '' %>JPDA_OPTS="<%= @jpda_opts_real %>"
<% end -%>

# Custom variables
<% if @custom_fragment and @custom_fragment != '' -%><%= @custom_fragment %><% end -%>