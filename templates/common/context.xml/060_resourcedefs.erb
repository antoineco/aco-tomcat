<%- [@resourcedefs].flatten.compact.each do |resourcedef| %>
  <%- resourcedef.each_pair do |attrib, value| -%>
    <%- if attrib == resourcedef.keys.first -%>
  <Resource <%= attrib %>=<%= "#{value}".encode(:xml => :attr) %><% if attrib == resourcedef.keys.last %> /><% end %>
    <%- else -%>
            <%= attrib %>=<%= "#{value}".encode(:xml => :attr) %><% if attrib == resourcedef.keys.last %> /><% end %>
    <%- end -%>
  <%- end -%>
<%- end -%>
