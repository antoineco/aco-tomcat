<%- [@environments].flatten.compact.each do |environment| %>
  <%- environment.each_pair do |attrib, value| -%>
    <%- if attrib == environment.keys.first -%>
  <Environment <%= attrib %>=<%= "#{value}".encode(:xml => :attr) %><% if attrib == environment.keys.last %> /><% end %>
    <%- else -%>
               <%= attrib %>=<%= "#{value}".encode(:xml => :attr) %><% if attrib == environment.keys.last %> /><% end %>
    <%- end -%>
  <%- end -%>
<%- end -%>
