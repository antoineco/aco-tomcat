<%- [@connectors].flatten.compact.each do |connector| %>
  <%- connector.sort.map do |attrib, att_value| -%>
    <%- if attrib == connector.keys.sort.first -%>
    <Connector <%= attrib %>="<%= att_value %>"<% if attrib == connector.keys.sort.last %> /><% end %>
    <%- else -%>
               <%= attrib %>="<%= att_value %>"<% if attrib == connector.keys.sort.last %> /><% end %>
    <%- end -%>
  <%- end -%>
<%- end -%>
