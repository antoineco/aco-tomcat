<%- if @lockout_realm %>
      <Realm className="org.apache.catalina.realm.LockOutRealm">
<%- end -%>
<%- if @userdatabase_realm -%>

<% if @lockout_realm %>  <% end %>      <Realm className="org.apache.catalina.realm.UserDatabaseRealm"
<% if @lockout_realm %>  <% end %>             resourceName="UserDatabase" />
<% end -%>
<%- if @realms and ! @realms.empty? -%>
  <%- [@realms].flatten.compact.each do |realm| %>
    <%- realm.sort.map do |attrib, att_value| -%>
      <%- if attrib == realm.keys.first -%>
<% if @lockout_realm %>  <% end %>      <Realm <%= attrib %>="<%= att_value %>"<% if attrib == realm.keys.sort.last %> /><% end %>
      <%- else -%>
<% if @lockout_realm %>  <% end %>             <%= attrib %>="<%= att_value %>"<% if attrib == realm.keys.sort.last %> /><% end %>
      <%- end -%>
    <%- end -%>
  <%- end -%>
<%- end -%>
<%- if @lockout_realm %>
      </Realm>
<%- end -%>
